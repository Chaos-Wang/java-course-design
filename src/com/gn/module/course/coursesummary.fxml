<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane prefHeight="1120.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gn.module.course.CourseSummaryController">
    <children>
        <TabPane>
            <tabs>
                <Tab closable="false" text="学期学科总结">
                    <content>
                        <VBox alignment="CENTER" spacing="10.0">
                            <children>
                                <HBox prefHeight="32.0" prefWidth="940.0">
                                    <children>
                                        <TextField fx:id="timeField" prefHeight="32.0" prefWidth="163.0" promptText="学期">
                                            <HBox.margin>
                                                <Insets right="10.0" />
                                            </HBox.margin></TextField>
                                        <Button mnemonicParsing="false" onAction="#onSearch" prefHeight="32.0" prefWidth="57.0" text="检索">
                                            <HBox.margin>
                                                <Insets right="10.0" />
                                            </HBox.margin></Button>
                                        <Button mnemonicParsing="false" onAction="#onRecover" prefHeight="32.0" prefWidth="57.0" text="恢复">
                                            <HBox.margin>
                                                <Insets right="10.0" />
                                            </HBox.margin></Button>
                                        <Button mnemonicParsing="false" onAction="#onSearch" prefHeight="32.0" prefWidth="57.0" text="刷新">
                                 <HBox.margin>
                                    <Insets right="10.0" />
                                 </HBox.margin></Button>
                              <Button mnemonicParsing="false" onAction="#exportAsCsv" prefHeight="32.0" prefWidth="84.0" text="导出为CSV" />
                                    </children>
                                    <VBox.margin>
                                        <Insets top="10.0" />
                                    </VBox.margin>
                                </HBox>
                                <TableView fx:id="courseSummaryTable" editable="false" prefHeight="888.0" prefWidth="940.0">
                                    <columns>
                                        <TableColumn fx:id="gc1" text="课程ID">
                                        </TableColumn>
                                        <TableColumn fx:id="gc2" text="课程名">
                                        </TableColumn>
                                        <TableColumn fx:id="gc3" text="平均成绩">
                                        </TableColumn>
                                        <TableColumn fx:id="gc4" text="平均绩点">
                                        </TableColumn>
                                        <TableColumn fx:id="gc5" text="通过率">
                                        </TableColumn>

                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                    </columnResizePolicy>
                                    <VBox.margin>
                                        <Insets bottom="30.0" />
                                    </VBox.margin>
                                </TableView>
                            </children>
                            <padding>
                                <Insets left="30.0" right="30.0" />
                            </padding>
                        </VBox>
                    </content>
                </Tab>
            </tabs>

        </TabPane>
    </children>
    <stylesheets>
        <URL value="@../../theme/css/material-color.css" />
        <URL value="@../../theme/css/skeleton.css" />
        <URL value="@../../theme/css/light.css" />
        <URL value="@../../theme/css/bootstrap.css" />
        <URL value="@../../theme/css/simple-green.css" />
        <URL value="@../../theme/css/shape.css" />
        <URL value="@../../theme/css/typographic.css" />
        <URL value="@../../theme/css/helpers.css" />
        <URL value="@../../theme/css/master.css" />
    </stylesheets>
</StackPane>
