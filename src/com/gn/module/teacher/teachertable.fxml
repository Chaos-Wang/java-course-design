<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane prefHeight="1120.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gn.module.teacher.TeacherTableController">
   <children>
      <TabPane>
         <tabs>
            <Tab closable="false" text="教师信息表">
               <content>
                  <VBox alignment="CENTER" spacing="10.0">
                     <children>
                        <HBox prefHeight="32.0" prefWidth="940.0">
                           <children>
                              <ChoiceBox fx:id="filterChoice" prefHeight="37.0" prefWidth="150.0">
                                 <HBox.margin>
                                    <Insets right="10.0" />
                                 </HBox.margin>
                              </ChoiceBox>
                              <TextField fx:id="filterChoiceValueField" prefHeight="32.0" prefWidth="163.0" promptText="条件值">
                                 <HBox.margin>
                                    <Insets right="10.0" />
                                 </HBox.margin></TextField>
                              <Button mnemonicParsing="false" onAction="#onFilter" prefHeight="32.0" prefWidth="57.0" text="检索">
                                 <HBox.margin>
                                    <Insets right="10.0" />
                                 </HBox.margin></Button>
                              <Button mnemonicParsing="false" onAction="#onRecover" prefHeight="32.0" prefWidth="57.0" text="恢复">
                                 <HBox.margin>
                                    <Insets right="10.0" />
                                 </HBox.margin></Button>
                              <Button mnemonicParsing="false" onAction="#refresh" prefHeight="32.0" prefWidth="57.0" text="刷新">
                                 <HBox.margin>
                                    <Insets right="10.0" />
                                 </HBox.margin></Button>
                              <Button mnemonicParsing="false" onAction="#exportAsCsv" text="导出为CSV" />
                           </children>
                           <VBox.margin>
                              <Insets top="10.0" />
                           </VBox.margin>
                        </HBox>
                        <TableView fx:id="teacherTable" editable="true" prefHeight="888.0" prefWidth="940.0">
                          <columns>
                             <TableColumn fx:id="tc1" editable="false" text="ID">
                                         </TableColumn>
                             <TableColumn fx:id="tc2" text="姓名">
                                         </TableColumn>

                          </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                           <VBox.margin>
                              <Insets bottom="30.0" />
                           </VBox.margin>
                        </TableView>
                        <ButtonBar nodeOrientation="RIGHT_TO_LEFT" prefHeight="40.0" prefWidth="200.0">
                          <buttons>
                            <Button mnemonicParsing="false" onAction="#onDelete" text="删除选定项目" />
                          </buttons>
                           <VBox.margin>
                              <Insets bottom="10.0" />
                           </VBox.margin>
                        </ButtonBar>
                        <HBox prefHeight="100.0" prefWidth="200.0" />
                     </children>
                     <padding>
                        <Insets left="30.0" right="30.0" />
                     </padding>
                  </VBox>
               </content>
            </Tab>
         </tabs>

      </TabPane>
   </children>
   <stylesheets>
      <URL value="@../../theme/css/material-color.css" />
      <URL value="@../../theme/css/skeleton.css" />
      <URL value="@../../theme/css/light.css" />
      <URL value="@../../theme/css/bootstrap.css" />
      <URL value="@../../theme/css/simple-green.css" />
      <URL value="@../../theme/css/shape.css" />
      <URL value="@../../theme/css/typographic.css" />
      <URL value="@../../theme/css/helpers.css" />
      <URL value="@../../theme/css/master.css" />
   </stylesheets>
</StackPane>
